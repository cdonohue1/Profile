<p id="notice"><%= notice %></p>

<h1> Post Title </h1>
<h3><%= @post.title  %></h3>
<h4><%= @post.author %></h4>
<p><%= @post.body %></p>

<h3>Comments</h3>
<% @comments.each do |comment| %>
    <p><%= comment.body %></p>
<% end %>



<h3>Add a comment:</h3>
<%= form_for([@post, @post.comments.build]) do |f| %>

  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
 
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
